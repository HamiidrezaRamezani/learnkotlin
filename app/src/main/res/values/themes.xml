<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="btn_default_style">

        <item name="android:layout_width">30pt</item>
        <item name="android:layout_height">40pt</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/btn_default</item>
        <item name="android:layout_margin">1px</item>
        <item name="android:textSize">25sp</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="zero_btn_style" parent="btn_default_style">
        <item name="android:layout_width">60pt</item>
        <item name="android:layout_weight">2</item>
    </style>

    <style name="btn_operation" parent="btn_default_style">
        <item name="backgroundTint">@color/btn_orange</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>